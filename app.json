{
  "name": "canada-development",
  "scripts": {
    "postdeploy": "python manage.py init_db --init; python manage.py collectstatic --noinput"
  },
  "env": {
    "ADMIN_PASSWORD": {
      "generator": "secret"
    },
    "ADMIN_USERNAME": {
      "required": true
    },
    "DJANGO_SETTINGS_MODULE": {
      "required": true
    },
    "SECRET_KEY": {
      "generator": "secret"
    },
    "CANADA_CACHE_TEMPLATES": {
      "required": true
    },
    "CANADA_DEBUG": {
      "required": true
    },
    "CANADA_STORAGE": "s3",
    "AWS_ACCESS_KEY_ID": {
      "required": true
    },
    "AWS_SECRET_ACCESS_KEY": {
      "required": true
    },
    "AWS_BUCKET": {
      "required": true
    },
    "CANADA_CACHE": {
      "required": true
    },
    "CANADA_SENTRY": {
      "required": true
    },
    "CANADA_ALLOWED_HOST": "*",
    "CANADA_DEBUG_TOOLBAR": {
      "required": true
    },
    "CANADA_DEVSERVER": {
      "required": true
    },
    "CANADA_QUEUE_ASYNC": {
      "required": true
    },
    "CANADA_DUMPER_LOG": {
      "required": true
    },
    "CANADA_IMAGE_DIMENSION_FIELDS": {
      "required": true
    }
  },
  "addons": [
    "newrelic:stark",
    "heroku-postgresql:dev"
  ]
}
